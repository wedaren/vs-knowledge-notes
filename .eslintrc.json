{
   "root": true,
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
   },
   "plugins": [
      "@typescript-eslint"
   ],
   "rules": {
      "@typescript-eslint/naming-convention": [
         "warn",
         {
            "selector": "variable",
            "format": [
               "camelCase",
               "PascalCase",
               "UPPER_CASE"
            ]
         }
      ],
      "@typescript-eslint/semi": "warn",
      "eqeqeq": "warn",
      "no-throw-literal": "warn",
      "no-array-constructor": "warn",
      "semi": "off"
   },
   "ignorePatterns": [
      "**/*.d.ts",
      "*.config.js"
   ]
}
